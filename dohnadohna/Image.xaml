<Window x:Class="dohnadohna.Image"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dohnadohna"
        mc:Ignorable="d"
        Title="Image" Height="1024" Width="1024" Closing="Window_Closing"
        PreviewMouseDown="img_PreviewMouseDown" PreviewMouseMove="img_PreviewMouseMove" PreviewMouseUp="img_PreviewMouseUp">
    <Grid>
        <Canvas x:Name="canvas" Width="1024" Height="1024">
            <Image Canvas.Left="0" Canvas.Top="0" x:Name="img"/>
        </Canvas>
        <Image Source="base.jpg" Opacity="0.5"/>
    </Grid>
</Window>
